<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editBuscarId"
        android:layout_width="381dp"
        android:layout_height="65dp"
        android:hint="ID del Establecimiento"
        android:inputType="number" />

    <!-- Campos para modificar -->
    <EditText
        android:id="@+id/editNombre"
        android:layout_width="385dp"
        android:layout_height="85dp"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/editDireccion"
        android:layout_width="377dp"
        android:layout_height="68dp"
        android:hint="Dirección" />

    <EditText
        android:id="@+id/editTipo"
        android:layout_width="383dp"
        android:layout_height="75dp"
        android:hint="Tipo" />

    <EditText
        android:id="@+id/editDescripcion"
        android:layout_width="389dp"
        android:layout_height="76dp"
        android:hint="Descripción" />

    <EditText
        android:id="@+id/editTelefono"
        android:layout_width="391dp"
        android:layout_height="60dp"
        android:hint="Teléfono" />

    <EditText
        android:id="@+id/editFavorito"
        android:layout_width="380dp"
        android:layout_height="73dp"
        android:hint="Favorito (0 o 1)" />

    <EditText
        android:id="@+id/editUrlEstablecimiento"
        android:layout_width="384dp"
        android:layout_height="58dp"
        android:hint="URL Establecimiento" />

    <EditText
        android:id="@+id/editLogo"
        android:layout_width="384dp"
        android:layout_height="56dp"
        android:hint="Logo" />

    <Button
        android:id="@+id/btnModificar"
        android:layout_width="387dp"
        android:layout_height="61dp"
        android:text="Modificar" />
</LinearLayout>
